<% title t('.page_title') %>

<div class="grid-row">
  <div class="column-two-thirds">
    <%= step_header %>

    <h1 class="heading-xlarge gv-u-heading-xxlarge"><%=t '.heading' %></h1>

    <%= step_form @form_object do |f| %>
      <%=
        f.radio_button_fieldset :children_known_to_authorities, inline: true do |fieldset|
          fieldset.radio_input(GenericYesNoUnknown::YES, panel_id: :children_known_to_authorities_panel)
          fieldset.radio_input(GenericYesNoUnknown::NO)
          fieldset.radio_input(GenericYesNoUnknown::UNKNOWN)
          fieldset.revealing_panel(:children_known_to_authorities_panel) do |panel|
            panel.text_area :children_known_to_authorities_details, size: '40x4', class: 'form-control-3-4'
          end
        end
      %>

      <%= f.radio_button_fieldset :children_protection_plan, inline: true, choices: GenericYesNoUnknown.values %>

      <%= f.continue_button %>
    <% end %>
  </div>
</div>
